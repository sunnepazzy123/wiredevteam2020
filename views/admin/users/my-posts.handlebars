<h1>All post</h1>



<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Category</th>
            <th>Date</th>
          
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img src="/uploads/{{file}}" class="img-responsive" height="50px"></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComment}}</td>
            <td>{{category.name}}</td>
            <td>{{generateDate date "LLL"}}</td>
             <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Update</a></td>
             <td>
                 <form action="/admin/posts/{{_id}}?_method=DELETE"  method="post">
                 
                 <button type="submit" class="btn btn-danger">Delete</button>
                 
                 </form>



             </td> 
        </tr>
        {{/each}}
    </tbody>
</table>